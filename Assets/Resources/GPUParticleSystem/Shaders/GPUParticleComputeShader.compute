// Update kernel
#pragma kernel UPDATE

struct Particle
{
    float3 position;
};

RWStructuredBuffer<Particle> gParticleBufferIN;

RWStructuredBuffer<Particle> gParticleBufferOUT;

[numthreads(64,1,1)]
void UPDATE(uint3 id : SV_DispatchThreadID)
{
    uint tID = id.x;

    Particle pSelf = gParticleBufferIN[tID];
	
    gParticleBufferOUT[tID] = pSelf;
}

